<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }} <!-- Header hook for plugins -->
  {{ 'main.css' | asset_url | stylesheet_tag }}
  
  <script src="{{ 'shopify-money.js' | asset_url }}"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/vue@3.0.0"></script>
</head>

<body style="position: relative;">

  {%- section 'navbar-snippet' -%}

  {% comment %} DEBUG: {% endcomment %}
  <p style="display: inline-block; background: yellow; border: 1px solid #CCC; padding: 1em; font-weight: 700;">Current template: {{ template }}.liquid</p>


  <main role="main">
    {{ content_for_layout }}
  </main>

  {%- section 'footer' -%}

  {%- include 'modal' -%}

  {{ 'bundle.js' | asset_url | script_tag }}

</body>
</html>